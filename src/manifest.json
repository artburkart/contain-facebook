{
    "manifest_version": 2,
    "name": "Hulu Container",
    "version": "1.4.2",

    "description": "Hulu Container isolates your Hulu activity from the rest of your web activity in order to prevent Hulu from tracking you outside of the Hulu website via third party cookies.",

    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },

    "applications": {
      "gecko": {
        "id": "@contain-hulu",
        "strict_min_version": "57.0"
      }
    },

    "homepage_url": "https://github.com/artburkart/contain-hulu",

    "permissions": [
        "<all_urls>",
        "browsingData",
        "contextualIdentities",
        "cookies",
        "management",
        "storage",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "background": {
        "scripts": ["background.js"]
    }
}
